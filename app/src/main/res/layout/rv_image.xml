<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">


    <ImageView
        android:id="@+id/img_rv"
        android:layout_width="152dp"
        android:layout_height="164dp"
        android:clickable="true"
        android:focusable="true"
        android:padding="8dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_baseline_image_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@tools:sample/backgrounds/scenic" />

    <TextView
        android:id="@+id/txt_title_rv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@+id/img_rv"
        app:layout_constraintStart_toStartOf="@+id/img_rv"
        app:layout_constraintTop_toBottomOf="@+id/img_rv" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="@+id/txt_title_rv"
        app:layout_constraintStart_toStartOf="@+id/txt_title_rv"
        app:layout_constraintTop_toBottomOf="@+id/txt_title_rv">


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"
            android:padding="8dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_baseline_favorite_24" />

        <TextView
            android:id="@+id/txt_likes_rv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:text="@string/_0"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>